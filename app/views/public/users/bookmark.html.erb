<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2 class="text-center mb-4">ブックマーク一覧</h2>

      <% if @favorited_salons.present? %>
        <div class="row">
          <% @favorited_salons.each do |salon| %>
            <div class="col-md-4 mb-4">
              <div class="card shadow-sm h-100 custom-card-background">
                <div class="card-img-wrapper">
                  <% if salon.image.attached? %>
                    <%= image_tag url_for(salon.image), class: 'card-img-top' %>
                  <% else %>
                    <%= image_tag "https://placehold.co/600x400/CCCCCC/333333?text=No+Image", class: 'card-img-top' %>
                  <% end %>
                </div>
                <div class="card-body">
                  <h5 class="card-title mb-2"><%= link_to salon.name, salon_path(salon) %></h5>
                  <p class="card-text text-muted mb-3">
                    <%= truncate(salon.introduction, length: 50) %>
                  </p>
                  <div class="d-flex justify-content-end">
                    <%= render partial: 'public/salons/favorite_button', locals: { salon: salon } %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info text-center" role="alert">
          まだブックマークしたサロンはありません。
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to 'マイページに戻る', mypage_user_path(@user), class: 'btn btn-back' %>
      </div>
    </div>
  </div>
</div>