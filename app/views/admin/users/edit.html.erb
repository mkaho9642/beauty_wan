<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="my-4">ユーザー情報編集</h2>

      <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with model: [:admin, @user], local: true, data: { turbolinks: false } do |f| %>
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <th scope="row">会員ID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th scope="row">名前</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <th scope="row">ニックネーム</th>
              <td><%= f.text_field :nickname, class: "form-control" %></td>
            </tr>
            <tr>
              <th scope="row">メールアドレス</th>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <th scope="row">会員ステータス</th>
              <td>
                <%= f.radio_button :is_active, true, id: "user_is_active_true" %>
                <%= f.label :is_active, "有効", for: "user_is_active_true", class: "mr-3" %>

                <%= f.radio_button :is_active, false, id: "user_is_active_false" %>
                <%= f.label :is_active, "退会", for: "user_is_active_false" %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success mr-3" %>
          <%= link_to "戻る", admin_user_path(@user), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>