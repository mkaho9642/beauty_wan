<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="my-4">ユーザー詳細</h2>

      <table class="table table-bordered table-striped">
        <tbody>
          <tr>
            <th scope="row">会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th scope="row">名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row">会員ステータス</th>
            <td><%= @user.is_active ? "有効" : "退会" %></td>
          </tr>
          <tr>
            <th scope="row">登録日時</th>
            <td><%= l @user.created_at, format: :long %></td>
          </tr>
          <tr>
            <th scope="row">最終更新日時</th>
            <td><%= l @user.updated_at, format: :long %></td>
          </tr>
        </tbody>
      </table>

      <div class="form-group text-center">
        <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success mr-3" %>
        <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>