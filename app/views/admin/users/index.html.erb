<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2 class="my-4">全ユーザー 一覧</h2>

      <% if @users.empty? %>
        <p>登録されているユーザーはいません。</p>
      <% else %>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">名前</th>
              <th scope="col">メールアドレス</th>
              <th scope="col">ステータス</th>
              <th scope="col">詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.is_active ? "有効" : "退会" %></td>
                <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-info btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center mt-4">
          <%= paginate @users %>
        </div>
      <% end %>
    </div>
  </div>
</div>