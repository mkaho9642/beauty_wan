<div class="container mt-5">
  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <h3>ジャンル追加</h3>
      <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
        <% if @genre.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group mb-3">
          <%= f.label :name, "ジャンル名", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
        </div>
        <div class="text-center">
          <%= f.submit "新規登録", class: 'btn btn-success w-50' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>ジャンル一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>